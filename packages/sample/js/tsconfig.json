{
  "extends": "flarum-tsconfig",
  "include": [
    "src/**/*",
    "../../../vendor/*/*/js/dist-typings/@types/**/*",
    "@types/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist-typings",
    "baseUrl": ".",
    "paths": {
      "flarum/*": [
        "../vendor/flarum/core/js/dist-typings/*"
      ],
    }
  }
}